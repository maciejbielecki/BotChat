<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BotChat.App.ImagePage"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False">

    <Grid>
        <Grid.GestureRecognizers>
            <SwipeGestureRecognizer Direction="Left" Swiped="SwipeGestureRecognizer_Swiped"></SwipeGestureRecognizer>
        </Grid.GestureRecognizers>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <VerticalStackLayout x:Name="Navigation" BackgroundColor="Green" Grid.Row="0">
        </VerticalStackLayout>
        <VerticalStackLayout BackgroundColor="Black" Grid.Row="1">
            <Label Text="ImagePage" />
        </VerticalStackLayout>
        <HorizontalStackLayout x:Name="TextInput" BackgroundColor="Blue" Grid.Row="2"></HorizontalStackLayout>
    </Grid>

</ContentPage>
